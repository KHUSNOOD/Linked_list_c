#include<iostream>
using namespace std;
struct node{
    int data;
    struct node *next;
};
node *first=NULL;
void create(int a[], int n){
    int i;
    struct node *temp, *last;
    first=new node;
    first->data=a[0];
    first->next=NULL;
    last=first;
    
    for(int i=1; i<n; i++){
        temp=new node;
        temp->data=a[i];
        temp->next=NULL;
        last->next=temp;  // last's next is pointing to temp;
        last=temp;    
    }
}
void display(struct node *p){
    while(p!=NULL){
        cout<<p->data<<" ";
        p=p->next;
    }
}
int main(){
    int a[]={3,5,7,10,15};
    int n=sizeof(a)/sizeof(a[0]);
    //cout<<"Khusnood"<<endl;
    create(a,n);
    display(first);
    
    return 0;
}
